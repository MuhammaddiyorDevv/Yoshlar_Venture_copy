---
export const prerender = true;
export async function getStaticPaths() {
  return [
    { params: { lang: 'uz' } },
    { params: { lang: 'en' } },
    { params: { lang: 'ru' } },
  ];
}

import Layout from "../../layouts/Layout.astro";
import { getLang, getStrings } from "../../utils/i18n.js";

const lang = Astro.params.lang;
const strings = await getStrings(lang);
---

<Layout lang={lang} strings={strings} title="Yoshlar Venture">
  <div class="flex justify-between items-center">
    <h2
      class="max-w-[600px] text-[30px] sm:text-[40px] font-bold dark:text-white text-gray-900 mb-8 border-l-4 border-[#F28E46] pl-4 mt-[53px]"
    >
      {lang === 'uz' && 'Tadbirlar'}
      {lang === 'ru' && 'События'}
      {lang === 'en' && 'Events'}
    </h2>
    <button
      class="border-[2px] w-[50px] h-[50px] flex items-center justify-center rounded-full border-[#EBEBEB] dark:border-[#535862] dark:text-white text-black"
      onclick="history.back()"
      >&#8592;</button
    >
  </div>
  
  <div class="text-center py-20">
    <h3 class="text-2xl font-semibold mb-4 text-black dark:text-white">
      {lang === 'uz' && 'Tadbirlar tez orada qo\'shiladi'}
      {lang === 'ru' && 'События будут добавлены в ближайшее время'}
      {lang === 'en' && 'Events will be added soon'}
    </h3>
    <p class="text-gray-600 dark:text-gray-400">
      {lang === 'uz' && 'Bizning kelgusi tadbirlarimizni kuzatib boring'}
      {lang === 'ru' && 'Следите за нашими предстоящими событиями'}
      {lang === 'en' && 'Stay tuned for our upcoming events'}
    </p>
  </div>
</Layout> 