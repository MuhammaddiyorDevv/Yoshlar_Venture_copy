---
import TelegramDark from "../../assets/images/telegramDark.svg";
import darkTelegram from "../../assets/images/darkTelegram.svg";
import darkInstagram from "../../assets/images/darkInstagram.svg"
import darkYoutube from "../../assets/images/darkYoutube.svg";
import InstagramDark from "../../assets/images/instagramDark.svg";
import YouTubeDark from "../../assets/images/youtubeDark.svg";
---

<section id="mission" class="py-12 sm:py-16 mb-16">
  <div class="flex flex-col mb-[32px] sm:mb-20">
    <!-- Heading -->
    <h2
      class="max-w-[600px] text-[30px] sm:text-[40px] font-semibold text-[#000000] mb-6 border-l-4 border-[#F28E46] pl-4 dark:text-white"
    >
      Startaplaringizga birinchi ishonadigan — bizmiz.
    </h2>
    <!-- Supporting paragraph -->
    <h3
      class="max-w-[350px] leading-relaxed pt-8 sm:pt-[40px] text-2xl font-inter-tight"
    >
      Har bir katta g'oya — kichik ishonchdan boshlanadi
    </h3>
  </div>

  <!-- Video embed -->
  <div class="flex-1 w-full flex justify-center">
    <iframe
      class="w-full h-[250px] sm:h-[350px] lg:h-[415px] rounded-3xl shadow-lg"
      src="https://www.youtube.com/embed/rBUtohoovP4?si=b_m1lYgvSphT348S"
      title="Intro Video"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe>
  </div>

  <!-- Social Icons -->
  <div class="mt-6 flex justify-start space-x-4">
    <a href="#" aria-label="Telegram" class="hover:opacity-75">
      <img src={TelegramDark.src} alt="Telegram" class="w-8 h-8 flex dark:hidden" />
      <img src={darkTelegram.src} alt="Telegram" class="w-8 h-8 hidden dark:flex" />
    </a>
    <a href="#" aria-label="Instagram" class="hover:opacity-75">
      <img src={InstagramDark.src} alt="Instagram" class="w-8 h-8 flex dark:hidden" />
      <img src={darkInstagram.src} alt="Instagram" class="w-8 h-8 hidden dark:flex" />
    </a>
    <a href="#" aria-label="YouTube" class="hover:opacity-75">
      <img src={YouTubeDark.src} alt="YouTube" class="w-8 h-8 flex dark:hidden" />
      <img src={darkYoutube.src} alt="YouTube" class="w-8 h-8 hidden dark:flex" />
    </a>
  </div>
</section>
