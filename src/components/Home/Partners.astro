---
import Yoshlar from "../../assets/images/yoshlar-ishlari-logo.svg.svg";
import YoshlarDark from "../../assets/images/YoshlarIshlariDark.png"
import Jamgarmasi from "../../assets/images/jamgarmasi-logo.svg.svg";
---

<section>
  <div
    class="w-full mx-auto flex flex-col gap-[50px] sm:gap-10 mb-[50px] sm:mb-20"
  >
    <!-- Section title -->
    <h2
      class="max-w-[250px] text-2xl sm:text-3xl font-bold dark:text-white text-gray-900 mb-8 sm:mb-10 border-l-4 border-[#F28E46] pl-4 font-inter-tight"
    >
      Bizga ishongan hamkorlarimiz
    </h2>

    <!-- Cards grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Card 1 -->
<div class="mobile-card-bg py-[50px] flex flex-col items-center gap-[31px] rounded-4xl">
  <!-- Light-mode image -->
  <img
    src={Yoshlar.src}
    alt="Jamg'armasi"
    class="w-[204px] h-[204px] block dark:hidden"
  />

  <!-- Dark-mode image -->
  <img
    src={YoshlarDark.src}
    alt="Jamg'armasi (dark)"
    class="w-[204px] h-[204px] hidden dark:block"
  />

  <a
    class="bg-white cursor-pointer text-[#F28E46] font-semibold rounded-[24px] text-xl border border-orange-200 px-6 py-2 hover:bg-orange-50 transition font-inter-tight custom-shadow"
  >
    Ko'proq o'qish
  </a>
</div>


      <!-- Card 2 -->
      <div
        class="mobile-card-bg py-[50px] flex flex-col items-center gap-[31px] rounded-4xl"
      >
        <img
          src={Jamgarmasi.src}
          alt="Jamg'armasi"
          class="w-[204px] h-[204px]"
        />
        <a
          class="bg-white text-[#F28E46] cursor-pointer font-semibold rounded-[24px] text-xl border border-orange-200 px-6 py-2 hover:bg-orange-50 transition font-inter-tight custom-shadow"
        >
          Ko'proq o'qish
        </a>
      </div>
    </div>
  </div>
</section>
