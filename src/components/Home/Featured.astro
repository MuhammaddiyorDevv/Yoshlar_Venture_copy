---
// src/components/Home/Promo.astro
import Lamp from "../../assets/images/Lamp.svg";

// `lang` navigatsiya uchun, `strings` esa allStrings.promoSection
const { lang, strings } = Astro.props;
---

<section id="promo" class="mx-auto py-12 sm:py-16 mb-[60px] sm:mb-20">
  <div class="mx-auto">
    <div
      class="bg-gradient-to-br from-brand-orange-start to-brand-orange-end rounded-[24px] p-[40px] sm:p-8 lg:p-10 overflow-hidden"
      style="
        background-image:
          url('/BgImg.png'),
          linear-gradient(to bottom right, #F9B513, #EA601E);
        background-size: 100% 100%;
        background-position: top center;
        background-repeat: repeat-y;
      "
    >
      <!-- Quote text -->
      <div class="max-w-2xl border-l-4 border-white pl-4 sm:pl-6 mb-8 sm:mb-10">
        <p
          class="text-white text-xl sm:text-2xl lg:text-3xl xl:text-4xl font-semibold leading-tight font-inter-tight"
        >
          {strings.quote}
        </p>
      </div>
      <!-- CTA Button -->
      <a
        href={`/${lang}/form`}
        class="bg-white w-[270px] font-semibold cursor-pointer rounded-[16px] px-1 py-1 flex items-center justify-between space-x-3 shadow-lg hover:opacity-90 transition font-inter-tight"
      >
        <span class="ml-[32px] text-[20px] dark:text-[#000]">
          {strings.buttonText}
        </span>
        <img
          src={Lamp.src}
          alt={strings.buttonIconAlt}
          class="w-[48px] h-[48px] lg:w-10 lg:h-10"
        />
      </a>
    </div>
  </div>
</section>
