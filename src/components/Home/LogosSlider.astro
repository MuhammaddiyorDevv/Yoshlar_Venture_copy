---
// src/components/LogoSlider.astro
import LabSearch from "../../assets/labsearch.svg";
import Ebay      from "../../assets/ebay.svg";
import Simidan   from "../../assets/simidan.svg";
import Famir     from "../../assets/famir.svg";
import UR        from "../../assets/images/UR.svg";
import Lamp      from "../../assets/images/Frame 1000005242.svg";

const logos = [LabSearch, Ebay, Simidan, Famir, UR];
const slides = [...logos, ...logos];
---

<section id="portfolio-logos" class="w-full mb-[50px] sm:mb-20 overflow-hidden">
  <!-- Top lane -->
  <div class="overflow-hidden">
    <div class="slider-track whitespace-nowrap animate-marquee">
      {slides.map((Logo, idx) => (
        <span class="inline-block logo mx-4" key={idx}>
          <img src={Logo.src} alt={Logo+' logo'} class="h-12 inline-block" />
        </span>
      ))}
    </div>
  </div>

  <!-- Bottom lane (reverse) -->
  <div class="overflow-hidden mt-6">
    <div class="slider-track whitespace-nowrap animate-marquee animate-marquee-reverse">
      {slides.map((Logo, idx) => (
        <span class="inline-block logo mx-4" key={idx + slides.length}>
          <img src={Logo.src} alt={Logo+' logo'} class="h-12 inline-block" />
        </span>
      ))}
    </div>
  </div>

  <!-- CTA -->
  <div class="text-center mt-12">
    <a
      href="/Form"
      class="inline-flex items-center justify-center
             bg-gradient-to-r from-[#F9B513] to-[#EA601E]
             text-white text-[16px] sm:text-xl font-semibold
             rounded-3xl pl-8 pr-1.5 py-1.5 gap-4 sm:gap-4 tracking-[0.04em]
             hover:opacity-95 transition"
    >
      PORTFEL BILAN TANISHISH
      <img
        src={Lamp.src}
        alt="arrow icon"
        class="w-[38px] h-[40px] sm:w-[50px] sm:h-[52px] rounded-2xl ml-2"
      />
    </a>
  </div>
</section>
