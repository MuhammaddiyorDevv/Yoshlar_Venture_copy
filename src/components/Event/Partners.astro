import LampIcon from "../../assets/images/Frame 1000005242.svg";

const events = [
  {
    image: StartupImg,
    title: "She Starts",
    date: "6 iyun, 2025 -yil",
    status: "Yaqinda",
    icon: LampIcon,
  },
  {
    image: TechMeetupImg,
    title: "She Starts",
    date: "6-iyun, 2025 -yil",
    status: "Yaqinda",
    icon: LampIcon,
  },
  {
    image: StartupPitchImg,
    title: "She Starts",
