---

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2
    class="max-w-[250px] text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-8 border-l-4 border-[#F28E46] pl-4 font-inter-tight"
  >
    Bizga ishongan hamkorlarimiz
  </h2>

  <!-- Desktop: Normal grid layout -->
  <!-- Desktop: Normal grid layout -->
<div class="hidden sm:grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {events.map((event) => (
    <a href="/EventDetail" class="block group hover:scale-105 transition-transform duration-200">
      <EventCard
        image={event.image}
        title={event.title}
        date={event.date}
        status={event.status}
        icon={event.icon}
      />
    </a>
  ))}
</div>
  <!-- Mobile: Single column layout -->
  <div class="sm:hidden grid gap-8">
    {events.map((event) => (
      <a href="/EventDetail" class="block group hover:scale-105 transition-transform duration-200">
        <EventCard
          image={event.image}
          title={event.title}
          date={event.date}
          status={event.status}
          icon={event.icon}
        />
      </a>
    ))}
  </div>
</div>



