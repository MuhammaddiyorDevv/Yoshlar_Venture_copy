---
interface Props {
  image: { src: string };
  title: string;
  date: string;
  status: string;
  icon: { src: string };
}
const { image, title, date, status, icon } = Astro.props as Props;
---

<article class="max-w-sm bg-white rounded-3xl shadow-lg overflow-hidden">
  <!-- Image + Badge -->
  <div class="relative">
    <img src={image.src} alt={title} class="w-full h-auto object-cover" />
    <span class="absolute top-4 left-4 bg-white px-4 py-1 rounded-full text-[#F28E46] font-semibold text-sm">
      {status}
    </span>
  </div>

  <!-- Content -->
  <div class="px-6 py-4">
    <div class="flex justify-between items-center">
      <h3 class="text-lg font-bold text-black">{title}</h3>
      <time class="text-sm text-gray-500">{date}</time>
    </div>
    <hr class="my-4 border-t border-gray-200" />
    <button class="inline-flex items-center bg-gradient-to-r from-[#EA601E] to-[#F9B513] text-white text-sm font-semibold rounded-full px-5 py-2 shadow-md hover:opacity-95 transition">
      Batafsil
      <img src={icon.src} alt="icon" class="w-5 h-5 ml-2" />
    </button>
  </div>
</article>
